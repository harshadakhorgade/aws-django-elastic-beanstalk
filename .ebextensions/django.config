option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: awsdjango/wsgi.py
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: awsdjango.settings.prod
    SECRET_KEY: "<your-secret-key>"
    ALLOWED_HOSTS: "yourdomain.com,.elasticbeanstalk.com"

# Ensure migrations, superuser creation, and static file collection
container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python manage.py migrate"
    leader_only: true

  02_makesuper:
    command: "source /var/app/venv/*/bin/activate && python manage.py shell -c \"from django.contrib.auth import get_user_model; User = get_user_model(); User.objects.filter(is_superuser=True).exists() or User.objects.create_superuser('admin', 'admin@example.com', 'AdminPassword')\""
    leader_only: true

  03_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python manage.py collectstatic --noinput"
